---
interface Link {
  name: string;
  link: string;
}

const data_links: Link[] = [
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/alejandro-camacho-olivares-a66038227/",
  },
  {
    name: "GitHub",
    link: "https://github.com/CeriOwl",
  },
];
---

<header
  class="relative z-10 border-b border-slate-200 flex justify-between py-4 max-w-5xl mx-auto max-[1100px]:max-w-[90%]"
>
  <div class="flex items-center gap-x-3">
    <a href="mailto:alejandro.camacho.olivares@gmail.com" class="border-2 rounded-full border-slate-200 p-3 bg-neutral-900">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-4 text-slate-200"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
        ></path>
      </svg>
    </a>
    <span class="text-slate-200 text-sm font-extralight max-sm:hidden"
      >alejandro.camacho.olivares@gmail.com</span
    >
  </div>
  <nav class="flex items-center">
    <ul class="flex gap-x-4">
      {
        data_links.map((data) => (
          <li>
            <a
              class="text-slate-300 font-light text-base hover:text-slate-50 "
              href={data.link} target="_blank"
            >
              {data.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
